#:import FadeTransition kivy.uix.screenmanager.FadeTransition

<MyActionBar@ActionBar>

	ActionView:
		use_separator: True
		ActionPrevious:
			#title:'move'
			with_previous: True
			app_icon:'data/images/nao.png'
			on_press:app.root.current = 'menu'
		ActionOverflow:
		ActionButton:
			#text: 'Btn0'
			icon: 'atlas://data/images/defaulttheme/audio-volume-low'
			on_press:app.cli.voice('01')
		ActionButton:
			#text: 'Btn0'
			icon: 'atlas://data/images/defaulttheme/audio-volume-high'
			on_press:app.cli.voice('02')
<MenuScreen>:

	#orientation:'vertical'
	name:'menu'
	canvas.before:
		Color:
			rgb:87/255.,94/255.,93/255.,1
			#rgb:1,1,1,1
		Rectangle:
			source:'data/images/background.png'
			size:root.size
			pos:root.pos
	ActionBar:
		pos_hint: {'top':1}
		size_hint_y: .1
		#background_color:0,0,0.,1
		ActionView:
			use_separator: True
			ActionPrevious:
				with_previous: False
				app_icon:'data/images/nao.png'
			ActionOverflow:
			ActionButton:
				#text: 'Btn0'
				icon: 'atlas://data/images/defaulttheme/audio-volume-low'
				on_press:app.cli.voice('01')
			ActionButton:
				#text: 'Btn0'
				icon: 'atlas://data/images/defaulttheme/audio-volume-high'
				on_press:app.cli.voice('02')
				
	BoxLayout:
		pos_hint: {'top':.8}
		IconButton:
			source:'data/images/move.png'
			on_press:root.manager.current = 'move'
		IconButton:
			source:'data/images/say.png'
			on_press:root.manager.current = 'say'
		IconButton:
			source:'data/images/dance.png'
			on_press:root.manager.current = 'dance'
		IconButton:
			source:'data/images/email.png'
			on_press:root.manager.current = 'email'
	
			
<MoveScreen>:
	name:'move'
	#skill1_texture:skill1_texture
	canvas.before:
		Color:
			rgb:87/255.,94/255.,93/255.,1
			rgb:1,1,1,1
		Rectangle:
			source:'data/images/nao_background_1.png'
			size:self.size
			pos:self.pos
	MyActionBar:
		pos_hint: {'top':1}
		size_hint_y: .1
	MyDirectionlever:
		pos_hint: {'left':1}
		size_hint_x: .5
	BoxLayout:
		orientation:'vertical'
		pos_hint: {'right':1,'top':.7}
		size_hint: .5,.6
		BoxLayout:
			IconButton:
				source:'data/images/attack.png'
				on_press:app.cli.move('02','00')
			IconButton:
				source:'data/images/bad-attack.png'
				on_press:app.cli.move('02','01')
		BoxLayout:
			IconButton:
				source:'data/images/home_attack.png'
				on_press:app.cli.move('02','02')
			IconButton:
				source:'data/images/stop.png'
				on_press:app.cli.stop()
<SayScreen>:
	name:'say'
	say_text_list:app.say_text_list
	canvas.before:
		Color:
			#rgb:87/255.,94/255.,93/255.,1
			rgb:1,1,1,1
		Rectangle:
			source:'data/images/nao_background_2.png'
			size:root.size
			pos:root.pos
	ActionBar:
		pos_hint: {'top':1}
		size_hint_y: .1
		ActionView:
			use_separator: True
			ActionPrevious:
				#title:'move'
				with_previous: True
				app_icon:'data/images/nao.png'
				on_press:app.root.current = 'menu'
			ActionOverflow:
			ActionButton:
				#text: 'Btn0'
				icon: 'atlas://data/images/defaulttheme/audio-volume-low'
				on_press:app.cli.voice('01')
			ActionButton:
				#text: 'Btn0'
				icon: 'atlas://data/images/defaulttheme/audio-volume-high'
				on_press:app.cli.voice('02')
			ActionButton:
				text:'编辑'
				on_press:app.root.current = 'edit'
<EditScreen>:
	name:'edit'
	canvas.before:
		Color:
			#rgb:87/255.,94/255.,93/255.,1
			rgb:1,1,1,1
		Rectangle:
			source:'data/images/nao_background_2.png'
			size:root.size
			pos:root.pos
	ActionBar:
		pos_hint: {'top':1}
		size_hint_y: .1
		ActionView:
			use_separator: True
			ActionPrevious:
				#title:'move'
				with_previous: True
				app_icon:'data/images/nao.png'
				on_press:app.root.current = 'menu'
			ActionOverflow:
			ActionButton:
				text:'取消'
				on_press:app.root.current = 'say'
			ActionButton:
				text:'完成'
				on_press:root.updata_say_text_list([txt1.text,txt2.text,txt3.text,txt4.text])
				on_release: root.manager.updata_say_screen()
				#on_release:app.root.current = 'say'
				
				
	BoxLayout:
		orientation:'vertical'
		pos_hint: {'x':.2,'top':.6}
		size_hint: .6,.4
		TextInput:
			id:txt1
			text:app.say_text_list[0][1].encode('utf-8')
		TextInput:
			id:txt2
			text:app.say_text_list[1][1].encode('utf-8')
		TextInput:
			id:txt3
			text:app.say_text_list[2][1].encode('utf-8')
		TextInput:
			id:txt4
			text:app.say_text_list[3][1].encode('utf-8')
		
<DanceScreen>:
	name:'dance'
	canvas.before:
		Color:
			#rgb:87/255.,94/255.,93/255.,1
			rgb:1,1,1,1
		Rectangle:
			source:'data/images/background.png'
			size:root.size
			pos:root.pos
	MyActionBar:
		pos_hint: {'top':1}
		size_hint_y: .1
	
	GridLayout:
		pos_hint: {'x':.15,'top':.85}
		size_hint: .7,.8
		cols:3
		Button:
			background_color:0,0,1,1
			font_size:36
			text:'小苹果'
			on_press:app.cli.dance(self.text)
		Button:
			background_color:0,0,1,1
			font_size:36
			text:'骑马舞'
			on_press:app.cli.dance(self.text)
		Button:
			background_color:0,0,1,1
			font_size:36
			text:'摇摆舞'
			on_press:app.cli.dance(self.text)
		Button:
			background_color:0,0,1,1
			font_size:36
			text:'上海舞'
			on_press:app.cli.dance(self.text)
		Button:
			background_normal:'data/images/stop.png'
			on_press:app.cli.stop()
		Button:
			background_color:0,0,1,1
			font_size:36
			text:'足球'
			on_press:app.cli.dance(self.text)
		Button:
			background_color:0,0,1,1
			font_size:36
			text:'起来'
			on_press:app.cli.dance('00')
		Button:
			background_color:0,0,1,1
			font_size:36
			text:'中国舞'
			on_press:app.cli.dance(self.text)
		Button:
			background_color:0,0,1,1
			font_size:36
			text:'坐下'
			on_press:app.cli.dance(self.text)
		
